{
  "extends": "idiomatic",

  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },

  "rules": {

    // indentation
    "indent": [ "error", 4 ],
    "comma-dangle": 0,
    "linebreak-style": 0,

    // strings
    "quotes": 0,

    // code arrangement matter
    "no-use-before-define": [ 2, { "functions": false } ],
    "no-continue": 0,
    "one-var":0,

    // make it meaningful
    "prefer-const": 1,

    // keep it simple
    "complexity": [ 1, 5 ],
    "max-len": [1, 150]
  }

}
